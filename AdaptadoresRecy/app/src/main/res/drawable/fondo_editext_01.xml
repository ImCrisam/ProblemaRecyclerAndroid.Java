<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="50dp"/>
                    <stroke android:width="1dp" android:color="@color/colorAccent" android:dashWidth="1dp" android:dashGap="2dp"/>
                    <size android:width="110dp" android:height="50dp" />

                </shape>
            </item>

        </layer-list>

    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/black" android:dashWidth="1dp" android:dashGap="2dp"/>
                    <size android:width="110dp" android:height="50dp" />

                </shape>
            </item>

        </layer-list>

    </item>


</selector>